{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"],
            "ziggy": ["vendor/tightenco/ziggy/src/js"]
        },
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["vite/client"],
        "allowJs": true,
        "noEmit": true,
        "strict": true
    },
    "exclude": ["vendor", "node_modules", "public"]
}
